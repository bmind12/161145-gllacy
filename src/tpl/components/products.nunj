<section class="products">
    <h2 class="visually-hidden">Мороженое</h2>
    <ul>
        {% for name, price, volume, link, img, modifier in products %}
            <li class="offer__item {{modifier}}">
                <a href="{{link}}">
                    <img src="{{img}}" alt="{{name}}">
                </a>
                <span>{{price}}<small>/{{volume}}</small></span>
                <h3>{{name}}</h3>
            </li>
        {% endfor %}
    </ul>
</section>
